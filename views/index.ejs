<%include ../views/partials/header%>
<div class="row">
	
	<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
		
		<form action="/todo/add" method="post"  >
			<div class="form-group">
				<label >ToDo Name</label>
				<input type="text" name="text" placeholder="add to do " class="form-control">
			</div>
			<div class="form-group">
				<label >ToDo Body</label>
				<textarea  name="body"  class="form-control"></textarea>
			</div>
			<button type="submit" class="btn btn-primary btn-block"> Submit</button>
		</form>
	</div>
	<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
		<ul class="list-group">
			<%todos.forEach(function(todo) { %>
			<li class="list-group-item"> <%=todo.text%> - <%=todo.body%> 
				<a href="/todo/edit/<%=todo._id%>" class="btn btn-default" > Edit  	</a>
				<a data-id="<%=todo._id%>" href="#" class="delete-todo btn btn-danger">Delete</a>
		</li>
		<% }) %>
	</ul>
</div>
</div>
<%include ../views/partials/footer%>